[[ -n $DEBUG ]] && set -x

set -eou pipefail
IFS=$'\n\t'

usage() {
  local SELF
  SELF="kubespy"
  if [[ "$(basename "$0")" == kubectl-* ]]; then
    SELF="kubectl spy"
  fi

  cat <<EOF
Load common system tools into a particular running pod for debugging

Usage:

  $SELF POD [-c CONTAINER] [--ephemeral SPY_IMAGE]

Examples:

  # spy the first container nginx from mypod
  $SELF mypod

  # sspy container nginx from mypod
  $SELF mypod -c nginx

  # spy container nginx from mypod using busybox
  $SELF mypod -c nginx --ephemeral busybox

See https://github.com/huazhihao/kubespy for more details.
EOF
}

exit_err() {
   echo >&2 "${1}"
   exit 1
}

main() {
  [ $# -eq 0 ] && exit_err "You must specify a pod for spying"

  while [ $# -gt 0 ]; do
      case "$1" in
          -h | --help)
              usage
              exit
              ;;
          -c | --container)
              co="$2"
              shift
              shift
              ;;
          --ephemeral)
              ep="$2"
              shift
              shift
              ;;
          *)
              po="$1"
              shift
              ;;
      esac
  done

  co=${co:-""}
  ep=${ep:-"busybox:latest"}

  spyid="spy-$(shuf -i 1000-9999 -n 1)"
  kubectl delete po/"${spyid}" &>/dev/null || true

  no=$(kubectl get pod "${po}" -o "jsonpath={.spec.nodeName}") || exit_err "cannot found Pod ${po}'s nodeName"
  if [[ "${co}" == "" ]]; then
    cid=$(kubectl get pod "${po}" -o='jsonpath={.status.containerStatuses[0].containerID}' | sed 's/docker:\/\///')
  else
    cid=$(kubectl get pod "${po}" -o='jsonpath={.status.containerStatuses[?(@.name=="'"${co}"'")].containerID}' | sed 's/docker:\/\///')
  fi

  echo "loading spy pod..."
  kubectl run --rm --tty -i --overrides='
  {
    "spec": {
      "hostNetwork": true,
      "hostPID": true,
      "hostIPC": true,
      "nodeName": "'"${no}"'",
      "containers": [
        {
          "name": "spy",
          "image": "busybox",
          "command": [ "/bin/chroot", "/host"],
          "args": [
            "docker",
            "run",
            "-it",
            "--network=container:'"${cid}"'",
            "--pid=container:'"${cid}"'",
            "--ipc=container:'"${cid}"'",
            "'"${ep}"'"
          ],
          "stdin": true,
          "stdinOnce": true,
          "tty": true,
          "volumeMounts": [
            {
              "mountPath": "/host",
              "name": "node"
            }
          ]
        }
      ],
      "volumes": [
        {
          "name": "node",
          "hostPath": {
            "path": "/"
          }
        }
      ]
    }
  }
  ' --image=busybox --restart=Never "${spyid}" -- /bin/sh
}

main "$@"